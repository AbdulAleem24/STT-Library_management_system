# Express server
PORT=4000

# PostgreSQL connection string (adjust username/password/port/database for your setup)
DATABASE_URL="postgresql://username:password@localhost:5432/library_management?schema=public"

# Security (generate strong secrets for production)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=1d
BCRYPT_SALT_ROUNDS=10

# Optional basic auth to protect Swagger in production
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=your-secure-password
