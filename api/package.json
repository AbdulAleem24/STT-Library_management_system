{
  "name": "library-management-api",
  "version": "1.0.0",
  "description": "REST API for the Library Management System with JWT auth, Prisma ORM, and Swagger documentation.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.config.cjs --selectProjects unit --runInBand",
    "test:integration": "cross-env NODE_ENV=test jest --config jest.config.cjs --selectProjects integration --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --config jest.config.cjs --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --config jest.config.cjs --coverage",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio"
  },
  "keywords": [
    "library",
    "express",
    "prisma",
    "postgres",
    "swagger"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
  "@prisma/client": "^6.18.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
  "express": "^4.19.2",
  "express-basic-auth": "^1.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.10.7",
    "@swc/jest": "^0.2.36",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prisma": "^6.18.0",
    "supertest": "^7.0.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
